{
    "mcpServers": {
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "c7-mcp-server"
            ]
        },
        "figma": {
            "command": "npx",
            "args": [
                "-y",
                "@figma/mcp-server"
            ],
            "env": {
                "FIGMA_ACCESS_TOKEN": "YOUR_FIGMA_ACCESS_TOKEN_HERE"
            }
        }
    }
}